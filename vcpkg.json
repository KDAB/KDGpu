{
    "name": "kdgpu",
    "version": "0.10.0",
    "description": "KDGPU Library - C++ Vulkan wrapper for GPU programming",
    "homepage": "https://github.com/KDAB/kdgpu",
    "license": "MIT",
    "supports": "!uwp & (windows | linux | android | osx) & (arm | x86 | x64)",
    "dependencies": [
        {
            "name": "vulkan-sdk-components",
            "version>=": "1.4.328.0"
        },
        {
            "name": "pkgconf",
            "version>=": "2.5.1"
        },
        {
            "name": "spdlog",
            "version>=": "1.15.2"
        },
        {
            "name": "glslang",
            "features": [
                "tools"
            ],
            "version>=": "15.0.0"
        },
        {
            "name": "kdutils",
            "version>=": "0.1.13"
        }
    ],
    "features": {
        "testing": {
            "description": "Enable testing support",
            "dependencies": [
                {
                    "name": "doctest",
                    "version>=": "2.4.9"
                }
            ]
        },
        "kdgpukdgui": {
            "description": "Enable KDGui integration"
        },
        "kdgpuutils": {
            "description": "Enable KDGpuUtils"
        },
        "examples": {
            "description": "Build examples",
            "dependencies": [
                {
                    "name": "glm",
                    "version>=": "1.0.2"
                },
                {
                    "name": "stb",
                    "version>=": "2024-07-29#1"
                },
                {
                    "name": "imgui",
                    "version>=": "1.91.9",
                    "features": [
                        "vulkan-binding"
                    ]
                }
            ]
        },
        "openxr": {
            "description": "Enable OpenXR support for VR/AR",
            "dependencies": [
                {
                    "name": "openxr-loader",
                    "version>=": "1.1.45"
                },
                {
                    "name": "kdbindings",
                    "version>=": "1.1.0"
                }
            ]
        },
        "hlsl": {
            "description": "Enable HLSL shader support",
            "supports": "(windows & !arm32 & !uwp & !xbox) | (linux & x64)",
            "dependencies": [
                {
                    "name": "directx-dxc",
                    "version>=": "2025-10-10"
                }
            ]
        }
    },
    "configuration": {
        "default-registry": {
            "kind": "git",
            "baseline": "61092ca859d11d616e9db065b1cf4a42ca67d128",
            "repository": "https://github.com/microsoft/vcpkg"
        }
    }
}
