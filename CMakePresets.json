{
    "version": 2,
    "configurePresets": [
        {
            "name": "configure-base",
            "hidden": true,
            "generator": "Ninja"
        },
        {
            "name": "msvc_x64",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
            }
        },
        {
            "name": "debug-base",
            "hidden": true,
            "inherits": [
                "configure-base"
            ],
            "binaryDir": "${sourceDir}/build/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "KDGPU_BUILD_TESTS": "ON",
                "KDGPU_CODE_COVERAGE": "ON"
            },
            "environment": {
                "KDGPUEXAMPLE_ASSET_PATH": "${sourceDir}/build/Debug/assets"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug (Default)",
            "inherits": [
                "debug-base"
            ]
        },
        {
            "name": "debug-clang",
            "displayName": "Debug (Clang)",
            "inherits": [
                "debug-base",
                "clang"
            ]
        },
        {
            "name": "debug-msvc_x64",
            "displayName": "Debug (msvc_x64)",
            "inherits": [
                "configure-base",
                "msvc_x64"
            ],
            "binaryDir": "${sourceDir}/build/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "KDGPU_BUILD_TESTS": "ON"
            },
            "environment": {
                "KDGPUEXAMPLE_ASSET_PATH": "${sourceDir}/build/Debug/assets"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "inherits": [
                "configure-base"
            ],
            "binaryDir": "${sourceDir}/build/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "environment": {
                "KDGPUEXAMPLE_ASSET_PATH": "${sourceDir}/build/Release/assets"
            }
        },
        {
            "name": "release-msvc_x64",
            "displayName": "Release (msvc_x64)",
            "inherits": [
                "configure-base",
                "msvc_x64"
            ],
            "binaryDir": "${sourceDir}/build/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "environment": {
                "KDGPUEXAMPLE_ASSET_PATH": "${sourceDir}/build/Release/assets"
            }
        },
        {
            "name": "profile",
            "displayName": "Profile",
            "inherits": [
                "configure-base"
            ],
            "binaryDir": "${sourceDir}/build/Profile",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            },
            "environment": {
                "KDGPUEXAMPLE_ASSET_PATH": "${sourceDir}/build/Profile/assets"
            }
        },
        {
            "name": "profile-msvc_x64",
            "displayName": "Profile (msvc_x64)",
            "inherits": [
                "configure-base",
                "msvc_x64"
            ],
            "binaryDir": "${sourceDir}/build/Profile",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            },
            "environment": {
                "KDGPUEXAMPLE_ASSET_PATH": "${sourceDir}/build/Profile/assets"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "debug-clang",
            "configurePreset": "debug-clang"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "profile",
            "configurePreset": "profile"
        },
        {
            "name": "debug-msvc_x64",
            "configurePreset": "debug-msvc_x64"
        },
        {
            "name": "release-msvc_x64",
            "configurePreset": "release-msvc_x64"
        },
        {
            "name": "profile-msvc_x64",
            "configurePreset": "profile-msvc_x64"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "debug-msvc_x64",
            "configurePreset": "debug-msvc_x64"
        }
    ]
}
